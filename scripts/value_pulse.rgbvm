
# start
set r0 0

# direction
set r1 1

# static 0
set r2 0

# static 255
set r6 255

:loop
set r3 r2
set r4 r2
set r5 r0
hsv2rgb r3 r4 r5
write r3 r4 r5 0

# increment value
add r0 r1

# if value reached 0 or 255, reverse direction
cmp r0 r6
breq :reverse
cmp r0 r2
breq :reverse

goto :loop

:reverse
mul r1 -1
add r0 r1
goto :loop
